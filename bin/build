#!/usr/bin/env bash
#
# generate src/audible-export.js

main() {
  local outfile="src/audible-exporter.js" names files

  # NOTE: the list of files must be manually maintained to retain the correct order
  names=(dev util element list page book-page library-page library order-page exporter runner)

  read -r files < <(IFS=,; echo "src/{${names[*]}}.js")

  eval cat "${files}" > "${outfile}"
}

main
